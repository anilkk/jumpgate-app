{
  "name": "design-system-app",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "eslint-plugin-import-helpers"
    ],
    "rules": {
      "import-helpers/order-imports": [
        "warn",
        {
          "newlinesBetween": "always",
          "groups": [
            "module",
            "/^@/",
            [
              "parent",
              "sibling",
              "index"
            ]
          ],
          "alphabetize": {
            "order": "asc",
            "ignoreCase": true
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@contentful/field-editor-single-line": "^0.11.1",
    "@contentful/field-editor-test-utils": "^0.8.1",
    "@contentful/forma-36-fcss": "^0.2.11",
    "@contentful/forma-36-react-components": "^3.63.7",
    "@contentful/forma-36-tokens": "^0.9.1",
    "@contentful/rich-text-react-renderer": "^14.1.1",
    "ahooks": "^2.8.0",
    "catchify": "^2.6.1",
    "contentful": "^7.14.8",
    "contentful-ui-extensions-sdk": "^3.23.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@contentful/rich-text-types": "^14.1.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "eslint-plugin-import-helpers": "^1.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "react-scripts": "^3.4.3",
    "typescript": "^4.0.5"
  }
}
